.container{
  padding: 20rpx;
  width: 100%;
  background: #fff;
  box-sizing: border-box;
}
.item{
  position: relative;
  display: flex;
  justify-content: flex-start;
  font-size: 28rpx;
  padding: 20rpx 0;
}
.item text{
  color: #f5b141;
}
.item:after{
   content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.item image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}