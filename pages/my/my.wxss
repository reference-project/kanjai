page{
  background-color:#f2f2f2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  margin-bottom:0rpx;
  border-radius: 50%;
  border:2px solid #fff;
}
.userinfo-nickname {
  color: #000;
  font-size:26rpx;
}
.usermotto {
  margin-top: 100px;
}
.user_circle2{
  position: relative;
}
.all{
  margin-top: 20rpx;
}
.all .xuanze{
  position: relative;
}
.xuanze .carNum text{
    background: #98a1a9;
    color:#fff;
    width: 30rpx;
    padding:0 20rpx;
    border-radius: 30rpx;
}
.xuanze{
    font-size:26rpx;
    display: flex;
    justify-content:space-between;
    color:#000;
    padding: 20rpx;
    background: #fff;
}
.xuanze .nextImg{
   font-size: 24rpx;
   color:#848484;
}
.xuanze .nextImg image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}
.all .xuanze image{
  width: 40rpx;
  vertical-align: middle;
  margin-right: 6rpx;
  position: relative;
  top: -6rpx;
}
.xuanze:before{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:-1px;
    left:20rpx;
    border:1px solid #f7f7f7;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}