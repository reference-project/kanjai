/*轮播*/
page{
  background-color:#f2f2f2;
}
.swiper{
  width: 750rpx;
  height: 416rpx;
}
.swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.text{
  padding: 20rpx;
  background: #fff;
}
.container .title{
    font-size: 28rpx;
    -o-text-overflow: ellipsis;
    text-overflow: ellipsis;		  
    overflow: hidden;
    white-space: nowrap;
    width:100%;
    list-style:disc inside none;
}
.container .price{
    font-size: 22rpx;
    display: flex;
    justify-content: space-between;
    color: #626262;
    padding: 10rpx 0 0 0;
}
.price .big{
  font-size: 32rpx;
}
.price .color{
    margin-left: 20rpx;
}
.left view{
  display: inline-block;
  color: #b52e32;
}
.progress{
  margin-top: 20rpx;
  font-size: 26rpx;
  background: #fff;
  padding: 20rpx 0;
}
.progress .top{
  display: flex;
  justify-content: flex-start;
  width: 90%;
  margin: 0 auto;
}
.progress .top image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.bar{
  position: relative;
  height: 16rpx;
  padding: 30rpx 0;
}
.parents{
  position: absolute;
  height: 16rpx;
  width: 84%;
  background: #8a8a8a;
  border-radius: 10rpx;
  left: 8%;
}
.child{
  position: absolute;
  height: 16rpx;
  background: #b52e32;
  border-radius: 10rpx;
  left: 8%;
}
.priceBar{
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin: 16rpx auto;
  color: #626262;
}
.buttons{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  background: #fff;
}
.buttons view{
  background: #b52e32;
  color: #fff;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  cursor: pointer;
}
.bar .money{
  color: #b52e32;
  padding-bottom: 6rpx;
}
.bg{
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  z-index: 6;
}
.footer{
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;
}
.footer view{
    text-align: center;
    height: 92rpx;
    line-height: 92rpx;
    background: #fff;
}
.cancel{
  margin-top: 10rpx;
}
.footer button{
  font-size: 32rpx;
  padding: 0!important;
  margin: 0!important;
  border-radius: 0!important;
  height: 92rpx;
  line-height: 92rpx;
  background: #fff;
}
button:after{
  content: none;
}
.poster{
  border-top:1px solid #ddd;
  border-bottom:1px solid #ddd;
}
/*  */
.notice{
  font-size:26rpx;
  background:#ab988a;
  color: #fff;
  padding:20rpx;
  line-height: 46rpx;
}
.nowPrice{
  font-size:26rpx;
  background:#fff;
  display: flex;
  justify-content: space-around;
  text-align: center;
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #ddd;
}
.nowPrice .item{
  padding:30rpx;
  width: 100%;
  position: relative;
  color: #000;
}
.stock{
  font-size: 24rpx;
  color: #626262;
  padding: 10rpx;
}
.stock .stockColor{
    color: #f5b141;
}
.item.two:after{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    left:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.item.two:before{
    content:" ";
    display: inline-block;
    height:100%;
    position:absolute;
    top:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleX(0.5);
    transform:scaleX(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}
.item .pay{
  color: #ab988a;
  font-size: 38rpx;
}
.kanjia{
  font-size: 28rpx;
  text-align: center;
  position:absolute;
  top:50%;
  left:50%;
  width:200px;
  height:200px;
  background:#fff;
  transform:translate(-50%,-50%);
  transform-origin:50% 50%;
  border-radius: 10rpx;
  z-index: 9;
}
.kanjia image{
  width: 160rpx;
  height: 160rpx;
}
.kanjia .less{
    color: #b52e32;
}
.kanjia .little{
  font-size: 22rpx;
  margin: 20rpx auto;
}
.kanjia .mine{
    background: #b52e32;
    color: #fff;
    width: 90%;
    margin: 0 auto;
    height: 60rpx;
    line-height: 60rpx;
}
.time{
  font-size:26rpx;
  padding: 20rpx;
  position: relative;
  background: #fff;
}
.time text{
  color:#f5b141;
}
.time:after{
    content:" ";
    display: inline-block;
    width:100%;
    position:absolute;
    bottom:0;
    right:0;
    border:1px solid #e5e5e5;
    -webkit-transform:scaleY(0.5);
    transform:scaleY(0.5);
    -webkit-transform-origin:0 0;
    transform-origin:0 0;
    box-sizing:border-box;
}